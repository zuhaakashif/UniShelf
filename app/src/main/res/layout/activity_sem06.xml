<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@drawable/three"
    android:padding="16dp"
    android:gravity="center">

    <TextView
        android:id="@+id/coursesTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:padding="30sp"
        android:text="C O U R S E S"
        android:textColor="@color/lightb"
        android:textSize="30sp"
        android:textStyle="bold"
        android:background="@drawable/text_box_outline"/>

    <Button
        android:id="@+id/MADButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#96BEFA"
        android:text="Mobile Application Development"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/TWButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#96BEFA"
        android:text="Technical Writing"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/CNButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#96BEFA"
        android:text="Computer Networks"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/CVButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:backgroundTint="#96BEFA"
        android:text="Computer Vision"
        android:textColor="@android:color/white"
        android:textSize="17sp" />

    <Button
        android:id="@+id/AIButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:backgroundTint="#96BEFA"
        android:text="Artificial Intelligence"
        android:textColor="@android:color/white"
        android:textSize="17sp" />
    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentBottom="true"
        android:layout_margin="16dp"
        android:layout_marginBottom="20dp"
        android:background="?android:attr/selectableItemBackgroundBorderless"
        android:contentDescription="Back Button"
        android:padding="8dp"
        android:src="@drawable/backbtn" />

</LinearLayout>
